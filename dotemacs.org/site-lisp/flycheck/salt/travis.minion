# -*- mode: yaml; -*-

# Minion configuration for Travis CI

# ID of the node
id: travis

# Local files, this is masterless
file_client: local

# On Travis, the current directory is our Git checkout, so we can directly load
# our states and pillars from it.
file_roots:
  base:
    - ./salt/salt/

pillar_roots:
  base:
    - ./salt/pillar/
